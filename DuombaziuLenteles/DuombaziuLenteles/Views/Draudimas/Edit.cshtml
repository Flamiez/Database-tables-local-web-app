@model DuombaziuLenteles.ViewModels.DraudimasEditViewModel

@{
    ViewBag.Title = "Draudimo koregavimas";
}

<h2>Draudimo koregavimas</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <fieldset>
        <legend>Draudimo informacija</legend>

        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                @Html.LabelFor(model => model.pasirasymo_data, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.pasirasymo_data, new { htmlAttributes = new { @class = "form-control date-picker" } })
                    @Html.ValidationMessageFor(model => model.pasirasymo_data, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.galiojimo_laikotarpis, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.galiojimo_laikotarpis, new { htmlAttributes = new { @class = "form-control  date-picker" } })
                    @Html.ValidationMessageFor(model => model.galiojimo_laikotarpis, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.fk_ZIDINYSid, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @*@Html.EditorFor(model => model.fk_marke, new { htmlAttributes = new { @class = "form-control" } })*@
                    @Html.DropDownListFor(model => model.fk_ZIDINYSid, Model.ZidiniaiList, "--------------", new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.fk_ZIDINYSid, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Išsaugoti" class="btn btn-success" />
                </div>
            </div>
        </div>
    </fieldset>
}
<div>
    @Html.ActionLink("Atgal į sarašą »", "Index", "Draudimas", new { @class = "btn btn-default" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
