@model IEnumerable<DuombaziuLenteles.ViewModels.DraudimasViewModel>

@{
    ViewBag.Title = "Modeliai";
}

<h2>Draudimų sąrašas</h2>

<p>
    @Html.ActionLink("Naujas draudimas", "Create", "Draudimas", new { @class = "btn btn-success" })
</p>
<table class="table table-striped datatable">
    <thead>
        <tr style="background-color: lightblue">
            <th>
                @Html.DisplayNameFor(model => model.id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.pasirasymo_data)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.galiojimo_laikotarpis)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.zidinys)
            </th>
            <th style="width: 18%"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.pasirasymo_data)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.galiojimo_laikotarpis)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.zidinys)
            </td>
            <td>
                @Html.ActionLink("Redaguoti", "Edit", new { id = item.id }, new { @class = "btn btn-primary action" })
                @Html.ActionLink("Šalinti", "Delete", new { id = item.id }, new { @class = "btn btn-danger action" })
            </td>
        </tr>
        }
    </tbody>

</table>
